<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="com.example.demo.webapp.dao.StationDao">

    <sql id = "Base_Column_List">
        GC_ID,GC_NO,ORG_NO,VOLT_CODE,STATUS_CODE,ABSO_MODE,POVERTY_ALLEV_FLAG,CONTRACT_CAP,to_char(GC_DATE,'yyyy-mm-dd hh24:mi:ss') AS GC_DATE
	</sql>

    <select id="findByWhere" parameterType="com.example.demo.webapp.domain.Station" resultType="com.example.demo.webapp.domain.Station" useCache="true">
        select
        <include refid="Base_Column_List" />
        from GF_STATION
        <where>
            STATUS = 0 AND SEND_FLAG  &lt; 3
        </where>
    </select>

    <update id="updateSuccessList" parameterType="java.util.List" flushCache="true">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            UPDATE GF_STATION
            <set>
                STATUS = 1
            </set>
            <where>
                <if test="item.gcId !=null">
                    and GC_ID = #{item.gcId}
                </if>
                <if test="item.gcNo !=null">
                    and GC_NO = #{item.gcNo}
                </if>
                <if test="item.orgNo !=null">
                    and ORG_NO = #{item.orgNo}
                </if>
                <if test="item.VoltCode !=null">
                    and VOLT_CODE = #{item.VoltCode}
                </if>
                <if test="item.StatusCode !=null">
                    and STATUS_CODE = #{item.StatusCode}
                </if>
                <if test="item.AbsoMode !=null">
                    and ABSO_MODE = #{item.AbsoMode}
                </if>
                <if test="item.PovertyAllevFlag !=null">
                    and POVERTY_ALLEV_FLAG = #{item.PovertyAllevFlag}
                </if>
                <if test="item.ContractCap !=null">
                    and CONTRACT_CAP = #{item.ContractCap}
                </if>
                <if test="item.GcDate !=null">
                    and GC_DATE = to_date(substr(#{item.GcDate},1,19),'yyyy-mm-dd hh24:mi:ss')
                </if>
            </where>
        </foreach>
    </update>

    <update id="updateFailList" parameterType="java.util.List" flushCache="true">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            UPDATE GF_STATION
            <set>
                STATUS = 0, SEND_FLAG = SEND_FLAG + 1
            </set>
            <where>
                <if test="item.gcId !=null">
                    and GC_ID = #{item.gcId}
                </if>
                <if test="item.gcNo !=null">
                    and GC_NO = #{item.gcNo}
                </if>
                <if test="item.orgNo !=null">
                    and ORG_NO = #{item.orgNo}
                </if>
                <if test="item.VoltCode !=null">
                    and VOLT_CODE = #{item.VoltCode}
                </if>
                <if test="item.StatusCode !=null">
                    and STATUS_CODE = #{item.StatusCode}
                </if>
                <if test="item.AbsoMode !=null">
                    and ABSO_MODE = #{item.AbsoMode}
                </if>
                <if test="item.PovertyAllevFlag !=null">
                    and POVERTY_ALLEV_FLAG = #{item.PovertyAllevFlag}
                </if>
                <if test="item.ContractCap !=null">
                    and CONTRACT_CAP = #{item.ContractCap}
                </if>
                <if test="item.GcDate !=null">
                    and GC_DATE = to_date(substr(#{item.GcDate},1,19),'yyyy-mm-dd hh24:mi:ss')
                </if>
            </where>
        </foreach>
    </update>

</mapper>
