<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="com.example.demo.webapp.dao.CompanyDao">

    <sql id = "Base_Column_List">
        ORG_NO,ORG_NAME,P_ORG_NO,ORG_TYPE,SORT_NO,ORG_PROPERTY,ORG_SHORTHAND
	</sql>

    <select id="findByWhere" parameterType="Company" resultType="Company" useCache="true">
        select
        <include refid="Base_Column_List" />
        from GF_COMPANY
        <where>
            STATUS = 0 AND SEND_FLAG  &lt; 3
        </where>
    </select>

    <update id="updateSuccessList" parameterType="java.util.List" flushCache="true">
        update GF_COMPANY
        <set>
            STATUS = 1
        </set>
        <where>
            ORG_NO IN
            <foreach item="item" collection="list" open="(" separator="," close=")">
                ${item.orgNo}
            </foreach>
        </where>
    </update>

    <update id="updateFailList" parameterType="java.util.List" flushCache="true">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            UPDATE GF_COMPANY
            <set>
                STATUS = 0, SEND_FLAG = SEND_FLAG + 1
            </set>
            <where>
                <if test="item.ORG_NO !=null">
                    and ORG_NO = #{item.ORG_NO}
                </if>
                <if test="item.ORG_NAME !=null">
                    and ORG_NAME = #{item.ORG_NAME}
                </if>
                <if test="item.P_ORG_NO !=null">
                    and P_ORG_NO = #{item.P_ORG_NO}
                </if>
                <if test="item.ORG_SHORTHAND !=null">
                    and ORG_SHORTHAND = #{item.ORG_SHORTHAND}
                </if>
            </where>
        </foreach>
    </update>

</mapper>
