<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="com.example.demo.webapp.dao.ElectricitydayDao">

    <sql id = "Base_Column_List">
        PROVINCE_CODE,ENERGY_DATE,GC_NO,PUR_PQ,GRA_PQ
	</sql>

    <select id="findByWhere" parameterType="Electricityday" resultType="Electricityday" useCache="true">
        select
        <include refid="Base_Column_List" />
        from GF_ELECTRICITYDAY
        <where>
            STATUS = 0 AND SEND_FLAG  &lt; 3
        </where>
    </select>

    <update id="updateSuccessList" parameterType="java.util.List" flushCache="true">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            UPDATE GF_ELECTRICITYDAY
            <set>
                STATUS = 1
            </set>
            <where>
                <if test="item.gcNo !=null">
                    and GC_NO = #{item.gcNo}
                </if>
                <if test="item.energyDate !=null">
                    and ENERGY_DATE = #{item.energyDate}
                </if>
            </where>
        </foreach>
    </update>

    <update id="updateFailList" parameterType="java.util.List" flushCache="true">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            UPDATE GF_ELECTRICITYDAY
            <set>
                STATUS = 0, SEND_FLAG = SEND_FLAG + 1
            </set>
            <where>
                <if test="item.gcNo !=null">
                    and GC_NO = #{item.gcNo}
                </if>
                <if test="item.energyDate !=null">
                    and ENERGY_DATE = #{item.energyDate}
                </if>
            </where>
        </foreach>
    </update>

</mapper>
