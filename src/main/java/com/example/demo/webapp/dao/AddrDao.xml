<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="com.example.demo.webapp.dao.AddrDao">

    <sql id = "Base_Column_List">
        GCA_ID,GC_NO,PROVINCE_NAME,CITY_NAME,COUNTY_NAME,STREET_NAME,VILLAGE_NAME,POS_X,POS_Y,POS_Z
    </sql>

    <select id="findByWhere" parameterType="Addr" resultType="Addr" useCache="true">
        select
        <include refid="Base_Column_List" />
        from GF_ADDR
        <where>
            <if test = "gcaId != null">
                and GCA_ID = #{gca_id}
            </if>
        </where>
    </select>

</mapper>
