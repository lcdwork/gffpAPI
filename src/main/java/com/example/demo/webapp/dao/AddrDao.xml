<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="com.example.demo.webapp.dao.AddrDao">

    <sql id = "Base_Column_List">
        GCA_ID,GC_NO,PROVINCE_NAME,CITY_NAME,COUNTY_NAME,STREET_NAME,VILLAGE_NAME,POS_X,POS_Y,POS_Z
    </sql>

    <select id="findByWhere" parameterType="Addr" resultType="Addr" useCache="true">
        select
        <include refid="Base_Column_List" />
        from GF_ADDR
        <where>
            STATUS = 0 AND SEND_FLAG  &lt; 3
        </where>
    </select>

    <update id="updateSuccessList" parameterType="java.util.List" flushCache="true">
        update GF_ADDR
        <set>
            STATUS = 1
        </set>
        <where>
            GCA_ID IN
            <foreach item="item" collection="list" open="(" separator="," close=")">
                ${item.gcaId}
            </foreach>
        </where>
    </update>

    <update id="updateFailList" parameterType="java.util.List" flushCache="true">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            UPDATE GF_ADDR
            <set>
                STATUS = 1
            </set>
            <set>
                STATUS = 0, SEND_FLAG = SEND_FLAG + 1
            </set>
            <where>
                <if test="item.GCA_ID !=null">
                    and GCA_ID = #{item.GCA_ID}
                </if>
                <if test="item.GC_NO !=null">
                    and GC_NO = #{item.GC_NO}
                </if>
            </where>
        </foreach>
    </update>

</mapper>
